            a(class="nav-link" href="/reg_user")(style="color: white;") Register User | 
            a(class="nav-link" href="/v_user")(style="color: white;") View Users |
            a(class="nav-link" href="/alogout")(style="color: white;") Logout  

     .container
        .row
            .col-md-12
                h3.text-center Below Are All The Cities And their Population Report
                table.table.table-striped.table-bordered.table-hover
                    thead
                        tr
                        th City ID
                        th City Name
                        th Country Code
                        th District
                        th Population
                        th Action
                    tbody
                    each row, i in rows
                        tr
                            td=row.ID
                            td= row.Name
                            td= row.CountryCode
                            td= row.District
                            td= new Intl.NumberFormat().format(row.Population)
                            td
                                a.btn.btn-sm.btn-primary(href=`/cities/${row.ID}`) View &nbsp;&nbsp;
                                a.btn.btn-sm.btn-info(href=`/update/${row.ID}`) Update &nbsp;&nbsp;    
                                a.btn.btn-sm.btn-danger(href=`/delete/${row.ID}`) Delete

