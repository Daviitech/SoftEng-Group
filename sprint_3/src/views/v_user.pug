extend layout 

block content 
     nav(class="navbar navbar-expand-lg")(style="background: grey; color: white; font-weight: bold;")
      .container-fluid
        a(class="navbar-brand" href="admin_dashboard")(style="color: white;") PMS ADMIN
        button(class="navbar-toggler" type="button" 
            data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" 
            aria-controls="navbarNavAltMarkup" aria-expanded="false" 
            aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse" id="navbarNavAltMarkup")
          div(class="navbar-nav")
            a(class="nav-link active" aria-current="page" href="/admin_dashboard")(style="color: white;") Home
            a(class="nav-link" href="/cities_a")(style="color: white;") Cities |
            a(class="nav-link" href="/reg_user")(style="color: white;") Register User | 
            a(class="nav-link" href="/v_user")(style="color: black;") View Users |
            a(class="nav-link" href="/alogout")(style="color: white;") Logout 

     .container
        .row
            .col-md-12
                h3.text-center All User(s)
                span.text-success
                    if message
                    p.success= message
                table.table.table-striped.table-bordered.table-hover
                    thead
                        tr
                            th ID
                            th User Email
                            th User Password
                            th Status
                    tbody
                        each row in rows 
                            tr
                                td=row.ID
                                td= row.email
                                td= row.password
                                td
                                    if row.status === 'active'
                                        a.btn.btn-sm.btn-primary(href=`/v_user/${row.ID}/${row.status}`)= row.status
                                        a.btn.btn-sm.btn-danger(href=`/v_user/${row.ID}`) Delete User
                                    else
                                        a.btn.btn-sm.btn-danger(href=`/v_user/${row.ID}/${row.status}`)= row.status
                                        a.btn.btn-sm.btn-primary(href=`/v_user/${row.ID}`) Delete User