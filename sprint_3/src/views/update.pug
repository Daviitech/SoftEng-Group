extend layout 

block content 
     nav(class="navbar navbar-expand-lg")(style="background: grey; color: white; font-weight: bold;")
      .container-fluid
        a(class="navbar-brand" href="#")(style="color: white;") PMS
        button(class="navbar-toggler" type="button" 
            data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" 
            aria-controls="navbarNavAltMarkup" aria-expanded="false" 
            aria-label="Toggle navigation")
          span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse" id="navbarNavAltMarkup")
          div(class="navbar-nav")
            a(class="nav-link active" aria-current="page" href="/")(style="color: white;") Home
            a(class="nav-link" href="/cities")(style="color: black;") Cities |
            a(class="nav-link" href="/dataE")(style="color: white;") Data Entry |
            a(class="nav-link" href="/search")(style="color: white;") Search | 
            a(class="nav-link" href="/login")(style="color: white;") Login |
            a(class="nav-link" href="/userM")(style="color: white;") User Management 

     .container
        .row
            .col-md-12
            h1.text-center Update City
            table.table.table-striped.table-bordered.table-hover
                tbody
                    tr 
                      th City Name
                      td #{city.name}
                    tr 
                      th Country
                      td #{city.country.name}
                    tr 
                      th Region
                      td #{city.country.region}
                    tr
                        th Update Population
                        td 
                          form(action=`/update/${city.id}/updatePopulation`, method="POST")
                            input.form-control(type="number", name="newPopulation", placeholder=city.population)
                            input.btn.btn-info(type="submit", value="Update Population")
            a.btn.btn-success(href="/cities") Back to City Page


     footer.footer(style="background: grey; color: white; font-weight: bold; margin-top: 40%;")
        .container
            .row
                .col-md-4
                    
                .col-md-4.text-center
                    h3 &copy copywrite 2024
                .col-md-4